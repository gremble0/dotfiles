#!/bin/sh

# FOR X11
# packages="git starship neovim maim bspwm sxhkd polybar pavucontrol rofi alacritty tmux thunar ttf-jetbrains-mono-nerd ripgrep nsxiv fzf chromium base-devel discord"

# FOR WAYLAND
packages="git starship neovim slurp grim wl-copy hyprland waybar pavucontrol wofi alacritty tmux thunar ttf-jetbrains-mono-nerd ripgrep nsxiv fzf chromium base-devel discord"

mkdir -p ~/Code/plugins
git clone git@github.com:gremble0/yellowbeans.nvim > ~/Code/plugins/yellowbeans.nvim
git clone git@github.com:gremble0/bufferstack.nvim > ~/Code/plugins/bufferstack.nvim
git clone git@github.com:gremble0/gline.nvim > ~/Code/plugins/gline.nvim

sudo pacman -Syu "$packages"
