#!/bin/sh
# Set wallpaper with nitrogen
nitrogen --restore &

# Start compositor
picom &

# Bind keys
sxhkd &

# Add dual keyboard layouts with setxkbmap
setxkbmap -option 'grp:alt_space_toggle' -layout us,no -option nodeadkeys

# Start window manager
setbar &
dwmstart > $XDG_CACHE_HOME/dwm/dwm.log
